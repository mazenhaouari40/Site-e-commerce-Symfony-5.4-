{% extends 'base.html.twig' %}

{% block title %}
{{ produit.nom }}
{% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="stylesheet" href="{{asset('/stylesheet/app.css')}}">
         {% endblock %}

{% block body %}

    <main class="container py-lg-4 py-md-3 py-2">
<div class="row">
    <div class="col-md-5 pr-md-5 mb-4 mb-md-0">
        <div class="image-container">
            <img src="{{asset('/image/produit/'~produit.image)}}" alt = "" class="img img-fluid product-single__image">
        </div>
            <div class="d-flex mt-2">
                {% for image in produit.imgproduit %}
                    <div class="mr-2 image-container w-25">
                        <img src="{{asset('/image/produit/'~image.nom)}}" alt="" class="img img-fluid product-single__image">
                    </div>
                {% endfor %}
            </div>

    </div>
    <div class="col-md-7">
        <header class="mb-4">
            <h1 class="product-single__heading">{{produit.nom}}</h1>
        </header>
        <p class="product-single__price">{{produit.prix|number_format(3,'.', ',') }} DT</p>
        {# <div class="basket-add mb-4">
                <a href="" class="btn btn-primary">
                    <i class="fas fa-shopping-cart mr-2"></i>
                    Ajouter au panier
                </a>
        </div> #}
        <p>
            {{produit.description}}
        </p>
    </div>
</div>

<div class="overlay">
    <div class="overlay__inner">
        <div class="overlay__close">
            <i class="fas fa-times"></i>
        </div>
        <button class="btn previous mr-4">
            <i class="fas fa-chevron-left"></i>
        </button>
        <div class="overlay__slide">
        </div>
        <button class="btn next ml-4">
            <i class="fas fa-chevron-right"></i>
        </button>
    </div>
</div>
    </main>
{% endblock %}
      
         {% block javascripts %}
             <script src="{{asset('/js/productSlider.js')}}"></script>
        {% endblock %}